#!/bin/bash

set -e

echo
echo " -- CHECKING WITH BLACK, FLAKE8 AND MYPY --"
echo

pre-commit run --all-files

echo
echo " -- CHECKING SPELLING WITH CODESPELL --"
echo

echo
echo " -- LINTING RST FILES WITH DOC8 --"
echo

doc8 docs -q


# Code spelling
codespell -I .codespellignore -f \
    pystac/*.py pystac/**/*.py \
    tests/*.py tests/**/*.py \
    docs/*.rst docs/**/*.rst \
    docs/*.ipynb docs/**/*.ipynb \
    scripts/* \
    *.py \
    *.md
